#include <stdio.h>
#include <string.h>

struct SStudent {

	char name[50];
	int roll;
	int marks;

};


int main()
{

	struct SStudent x;
	char student_name[50];


	printf("Enter information of students: \n");

	printf("Enter name: "); fflush(stdout);
	gets(student_name);

	strcpy(x.name,student_name);

	printf("Enter roll number: "); fflush(stdout);
	scanf("%d",&x.roll);

	printf("Enter marks: "); fflush(stdout);
	scanf("%d",&x.marks);

	printf("Displaying information: \n");

	printf("name: %s",x.name);
	printf("roll: %d",x.roll);
	printf("marks: %d",x.marks);

	return 0;


}
