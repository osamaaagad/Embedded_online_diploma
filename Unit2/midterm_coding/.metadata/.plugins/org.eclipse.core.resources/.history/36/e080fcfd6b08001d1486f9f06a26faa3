#include <stdio.h>
#include <string.h>

void reverse(char str[],int l)
{
	int i;
	printf("Reversed name: ");


	for (i=l-1;i>=0;i--)
	{

		printf("%c",str[i]);

	}

}

int main()
{

	char str[100];
	int length;


	printf("Enter a name: "); fflush(stdout);
	gets(str);

	length= strlen(str);

	reverse(str,length);

	return 0;

}
