#include <stdio.h>

void func(char num[])
{

	int sum=0,i;

	for(i=0;num[i]!=0;i++)
	{
		sum+=num[i];
	}

	printf("the sum of all digits= %d",sum);
}


int main()
{

	char num[100];

	printf("Enter a number: "); fflush(stdout);
	gets(num);

	func(num);



}
