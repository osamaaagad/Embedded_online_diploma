#include <stdio.h>

void sum_numbers(int i,int sum)
{


	if(i<=100){
		i++;
		sum+=i;
	}

	sum_numbers(i);

	printf("the sum of numbers from 1 to 100 = %d",sum);


}

int main()
{
	int i=0;sum=0;

	sum_numbers(i,sum);

	return 0;
}
