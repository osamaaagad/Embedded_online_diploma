#include <stdio.h>

int count_of_ones(int num)
{
	int i,j,count=0;


	for (i=31;i>=0;i--)

	{

		j=num>>i;

		if (j&1)
		{
			count++;
		}

		printf("\nthe count of ones in binary of number: %d",count);




	}
	int main()
	{

		int num,i,j;

		printf("Enter an integer: ");
		fflush(stdout);
		scanf("%d",&num);



	}
