#include <stdio.h>

int main()
{

	float a[100],Average,sum;
	int x,i;

	printf("Enter the number of data: ");
    fflush(stdout); fflush(stdin);
    scanf("%d",&x);

    for(i=0;i<x;i++)
    {
    	printf("Enter (%d) number: ",i+1);
    	fflush(stdout); fflush(stdin);
    	scanf("%f",&a[x]);
    	sum+=a[i];

    }

    printf("Average= %.2f", Average=sum/x)


}
