#include <stdio.h>

int main ()
{

	int x,i;
	int a[15];

	printf("Enter no of elements: ");
	fflush(stdout);
	scanf("%d",&x);

	printf("Enter elements of the array: \n");
	fflush(stdin); fflush(stdout);

	for(i=0;i<x;i++)
	{
		printf("element-%d: \n",i+1);
		fflush(stdin); fflush(stdout);
		scanf("%d",&a[i]);
	}
