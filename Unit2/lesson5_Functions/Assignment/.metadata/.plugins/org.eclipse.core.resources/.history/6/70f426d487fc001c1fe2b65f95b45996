#include <stdio.h>


void reverce(int i, char sen[])
{

	printf("%c",sen[i]);
	i--;

	if(sen[i]!=0)
	{
		reverce(i,sen);
	}

}

int main()
{

	char sen[100];
	int i,j;

	printf("Enter a sentence: ");
	fflush(stdout);
	gets(sen);


	j=strlen(sen)-1;


}
