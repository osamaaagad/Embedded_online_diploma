#include <stdio.h>

int main()
{

	int num,i,j;

	printf("Enter an integer: ");
	fflush(stdout);
	scanf("%d",&num);


	printf("\nthe integer in binary: ");
	fflush(stdout);

	for (i=31;i>=0;i--)

	{

		j=num>>i;

		if (j&1)
		{
			printf("1");
		}

		else
		{
			printf("0");
		}
	}

	return 0;

}
